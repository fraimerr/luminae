{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["esnext"],
		"strict": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noImplicitThis": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"moduleResolution": "node",
		"incremental": true,
		"removeComments": true,
		"outDir": "dist",
		"sourceMap": true,
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"exactOptionalPropertyTypes": false,
		"noImplicitOverride": true,
		"noUnusedParameters": true,
		"pretty": true,
		"noEmit": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"paths": {
			"~/util/*": ["./src/lib/utils/*.ts"],
			"~/structure/*": ["./src/lib/structures/*.ts"],
			"~/manager/*": ["./src/lib/manager/*.ts"],
			"~/lib/*": ["./src/lib/*.ts"],
			"~/models/*": ["./src/database/models/*.ts"],
			"~/types/*": ["./src/types/*"],
			"~/commands/*": ["./src/commands/*.ts"],
			"~/root/*": ["./src/*.ts"],
			"~/controller/*": ["./src/lib/controller/*.ts"],
		}
	},
	"include": ["src", "src/**/*.d.ts", "src/events/guildDelete/index.ts"]
}
